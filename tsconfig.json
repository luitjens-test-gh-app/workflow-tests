{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "inlineSourceMap": false,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
